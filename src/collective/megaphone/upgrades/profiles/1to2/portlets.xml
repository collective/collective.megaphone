<?xml version="1.0"?>
<portlets
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="collective.megaphone">

   <!-- remove old portlet -->
   <assignment
       type="portlets.Classic"
       manager="plone.rightcolumn"
       category="content_type"
       key="Action Letter"
       name="action_letter_send_count"
       remove="True"/>

   <!-- make new portlet type available -->
   <portlet 
     addview="collective.megaphone.portlets.calltoaction"
     title="Megaphone portlet"
     description="A portlet which promotes a Megaphone action letter or petition."
     i18n:attributes="title;
                      description">
     <for interface="plone.app.portlets.interfaces.IColumn" />
     <for interface="plone.app.portlets.interfaces.IDashboard" />
   </portlet>

</portlets>
